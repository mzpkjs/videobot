{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "incremental": true,
    "noEmitOnError": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "newLine": "lf",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "es2021"
    ],
    "paths": {
      "#/*": [
        "./lib/*"
      ]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
